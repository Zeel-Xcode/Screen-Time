<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="#00000000">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dim_30"
        android:layout_marginRight="@dimen/dim_30"
        android:layout_marginTop="@dimen/dim_8dp"
        tools:ignore="UselessParent"
        android:background="#00000000">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dim_15"
            android:background="#90ffcc00">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                tools:ignore="UselessParent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/warning"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dim_20"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_marginTop="@dimen/dim_8dp"
                    android:text="WARNING"
                    android:gravity="center"
                    android:textSize="@dimen/sp_10"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Cautious Approaching Excessive Usage "
                    android:gravity="center"
                    android:textSize="@dimen/sp_18"
                    android:layout_marginTop="@dimen/dim_40"
                    android:layout_marginBottom="@dimen/dim_40" />
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/pause_logo2"
                    android:layout_marginBottom="@dimen/dim_8dp"/>

            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/ivCancel"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:src="@drawable/pause_alert_close"
            tools:ignore="ContentDescription,RtlHardcoded" />
    </RelativeLayout>
</LinearLayout>
